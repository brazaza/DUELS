{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": false,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@duels/shared": ["../../packages/shared/src/index.ts"],
            "@duels/shared/*": ["../../packages/shared/src/*"]
        }
    },
    "include": [
        "src/**/*",
        "../../packages/shared/src/**/*"
    ]
}