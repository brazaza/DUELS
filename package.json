{
  "name": "duels",
  "version": "0.1.0",
  "private": true,
  "description": "Browser-based 2D duel game with webcam gesture detection",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter @duels/client dev",
    "dev:server": "pnpm --filter @duels/server dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter @duels/client build",
    "build:server": "pnpm --filter @duels/server build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "keywords": ["duel", "game", "mediapipe", "gesture", "webrtc"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
